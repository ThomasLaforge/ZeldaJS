{
  "compilerOptions": {

    "allowJs": false,
    "allowUnreachableCode": false,
    "allowUnusedLabels": false,
    "declaration": false,
    "forceConsistentCasingInFileNames": true,
    "noImplicitAny": true,
    "noImplicitReturns": true,
    //"noUnusedLocals": true,
    //"noUnusedParameters": true,
    "preserveConstEnums": true,
    "removeComments": false,
    "strictNullChecks": true,

    "module": "commonjs",
    "target": "es5",
    "outDir": "src/js/",
    "sourceMap": true
  },
  "include": [
    "src/app/**/*.ts"
  ]
}
